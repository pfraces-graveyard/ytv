doctype 5
html
  head
    meta(http-equiv='Content-Type', content='text/html; charset=utf-8')
    meta(name='viewport',
      content='initial-scale=1.0, maximum-scale=1.0, user-scalable=0;')
    link(rel='stylesheet', href='/stylesheets/style.css')
    block css
    title= title
  body
    #header
      #breadcrumb
        .crumb: a(href='/') home
        .separator
          .head
          .tail
        .crumb: a(href='/search') search
        .separator
          .head
          .tail
        .crumb.last detail
        .clear
      #hbody
        block header
          h1: a(href='/')= title
          p Welcome to #{title}, have fun!
    #body
      block content
    #footer
      block footer
    block javascripts
